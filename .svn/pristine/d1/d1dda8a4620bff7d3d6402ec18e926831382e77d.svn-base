
$(document).ready(function(){
  $(".welcome-close-screen").click(function(){
    $(".welcome-boot-screen").hide("500");
  });
});

/*上面这段是开机画面welcome-close-screen部分*/





//menu
$(document).ready(function(){
  
  $(".welcome-client li.mainlevel").mousemove(function(){
  $(this).find('ul').slideDown("500");//you can give it a speed
  });
  $(".welcome-client li.mainlevel").mouseleave(function(){
  $(this).find('ul').slideUp("500");
  });
  
});

/*上面这段是 客户端下载部分*/