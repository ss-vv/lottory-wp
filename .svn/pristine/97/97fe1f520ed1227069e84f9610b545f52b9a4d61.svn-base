.match-wrap{width:452px;height:225px;background:url(http://www.davcai.com/images/tip_bg_r.png);overflow: hidden;}
.match-wrap .match-wrap-top{width:420px;height:112px;background:#F5F5F5;margin: 16px auto 0;margin-left:13px;}
.match-wrap-top-left{width:100px;height:112px;float:left;text-align:center;padding-top:15px;}
.match-wrap-top-left .img_left{width:59px;height:66px;}
.match-wrap .match-wrap-top-left .name_left{width:100px;height:20px;line-height:20px;display:block;margin-top:5px;text-align:center;}
.match-wrap .match-wrap-detail{width:215px;height:112px;display:inline-block;padding-top:10px;}
.match-wrap .match-wrap-detail .score{width:100%;line-height:50px;height:50px;margin-bottom:10px;}
.match-wrap .match-wrap-detail .score_left{display:inline-block;color:#E22319;font-size:48px;margin-right:5px;}
.match-wrap .match-wrap-detail .score_right{color:#E22319;font-size:48px;}
.match-wrap .match-wrap-detail .vs{color:#777777;font-size:39px;margin-right:5px;}
.match-wrap .match-wrap-detail p{width:100%;text-align: center;line-height: 150%;}
.match-wrap .match-wrap-detail .first-half,.rest,.second-half,.end,.delay{display:none;}
.match-wrap-top-right{width:100px;height:112px;float:right;text-align:center;padding-top:15px;}
.match-wrap-top-right .img_right{width:59px;height:66px;}
.match-wrap .match-wrap-top-right .name_right{width:100px;height:20px;line-height:20px;display:block;margin-top:5px;text-align:center;}


.match-wrap .match-wrap-bottom{width:420px;height:75px;margin: 1px auto 0;clear:both;}
.match-wrap .match-wrap-bottom .zan{width:110px;height:60px;float:left;margin-top:2px;margin-left:66px;}
.match-wrap .match-wrap-bottom .zan .shidan{text-align: center;font-size: 14px;border: none;}
.match-wrap .match-wrap-bottom .zan .shidan span{color:#0092FF;font-size: 15px;}
.match-wrap .match-wrap-bottom .zan  .pop{width:110px;height:34px;line-height:34px;border:1px #E0D7D7 solid;text-align: center;margin-top: 3px;}
.match-wrap .match-wrap-bottom .zan  .pop .hand{display:inline-block;width:15px;height:15px;
float:left;margin-top:9px;margin-left:25px;margin-right:-25px;background:url(../images/hand_red.png);}
