	<profiles>
		<profile>
			<id>production</id>
			<build>
				<filters>
					<filter>src/filter/init.prod</filter>
				</filters>
				<resources>
					<resource>
						<directory>src/filter/</directory>
						<includes>
							<include>init.properties</include>
						</includes>
						<filtering>true</filtering>
					</resource>
				</resources>
			</build>
		</profile>
	</profiles>

	<name>lottery-account</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webappDirectory>target/${artifactId}</webappDirectory>
					<warSourceDirectory>WebContent</warSourceDirectory>
					<warSourceExcludes>
						node_modules/**,
						Gruntfile.js,
						package.json
					</warSourceExcludes>
					<webXml>WebContent/WEB-INF/web.xml</webXml>
				</configuration>
			</plugin>
		</plugins>

		<!-- 默认是开发环境配置 -->
		<filters>
			<filter>src/filter/init.dev</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/resources/</directory>
				<excludes>
					<exclude>init.properties</exclude>
				</excludes>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/filter/</directory>
				<includes>
					<include>init.properties</include>
				</includes>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>
</project>