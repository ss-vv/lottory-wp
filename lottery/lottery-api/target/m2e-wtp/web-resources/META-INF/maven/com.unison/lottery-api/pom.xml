	<modelVersion>4.0.0</modelVersion>
	<groupId>com.unison</groupId>
	<artifactId>lottery-api</artifactId>
	<packaging>war</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<name>lottery-api Maven Webapp</name>
	<url>http://maven.apache.org</url>
	<parent>
		<artifactId>lottery-parent</artifactId>
		<groupId>com.xhcms.lottery</groupId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<build>
		<finalName>lottery-api</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webXml>WebContent/WEB-INF/web.xml</webXml>
					<webappDirectory>target/${artifactId}</webappDirectory>
					<warSourceDirectory>WebContent</warSourceDirectory>
				</configuration>
			</plugin>
			<!-- <plugin> -->
			<!-- <groupId>org.apache.maven.plugins</groupId> -->
			<!-- <artifactId>maven-surefire-plugin</artifactId> -->
			<!-- <configuration> -->
			<!-- <forkMode>pertest</forkMode> -->
			<!-- <argLine>-Xms256m -Xmx512m</argLine> -->
			<!-- <testFailureIgnore>false</testFailureIgnore> -->
			<!-- <skip>false</skip> -->
			<!-- </configuration> -->
			<!-- </plugin> -->
		</plugins>

		<!-- 默认是开发环境配置 -->
		<filters>
			<filter>src/filter/init.dev</filter>
			<filter>src/filter/restAPIConfig.dev</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/resources/</directory>
				<excludes>
					<exclude>init.properties</exclude>
					<exclude>restAPIConfig.properties</exclude>
				</excludes>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/filter/</directory>
				<includes>
					<include>init.properties</include>
					<include>restAPIConfig.properties</include>
				</includes>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>
