        <script type="text/javascript">
            $(function(){
                $('#_top_loginForm').bind('submit', function() {
                    var _uIpt = $('input[name="username"]', $(this));
                    var _pIpt = $('input[name="password"]', $(this));
                    
                    var un = jQuery.trim(_uIpt.val());
                    var pd = jQuery.trim(_pIpt.val());
                    if(un.length == 0){
                        alert('请输入用户名');
                        _uIpt.focus();
                        return false;
                    }
                    if(pd.length == 0){
                        alert('请输入密码');
                        _pIpt.focus();
                        return false;
                    }
                    return true;
                });
            });
